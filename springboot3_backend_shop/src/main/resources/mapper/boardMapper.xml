		</association>
	</resultMap>


	<select id="content" parameterType="int" resultMap="contentSelect"> SELECT
		b.*, m.memberName FROM board b, members m WHERE
		b.memberEmail=m.memberEmail(+) AND num=#{num}  중복 방지 
	</select> -->


	<!-- 게시물 불러오기 -->
	<select id="content" parameterType="int" resultType="BoardDTO"> 
		SELECT b.* 
		FROM board b
		WHERE num=#{num}
	</select>


	
	<update id="reStepCount" parameterType="BoardDTO"> 
		UPDATE board
		SET re_step = re_step + 1  <!--(=) 할당의 의미  -->
		WHERE ref=#{ref} AND re_step > #{re_step}  <!-- (=) 비교의 의미 --> 
	</update>


	<update id="update" parameterType="BoardDTO"> 
	UPDATE board 
	SET subject=#{subject}, content=#{content} 
		<if test="upload != null">
		  ,upload=#{upload}
		</if>
	WHERE num = #{num} 
	</update>


	<select id="getFile" parameterType="int"
	resultType="string">
		SELECT upload
		FROM board
		WHERE num=#{num}
	</select>


	<delete id="delete" parameterType="int">
		DELETE FROM board
		WHERE num=#{num}
	</delete>


</mapper>















