	<!-- 목록 불러오기 -->
	<select id="list" parameterType="PageDTO" resultType="BoardDTO">
		<![CDATA[
		SELECT b.*
			FROM(SELECT rownum AS rm, a.*
				FROM (SELECT b.* FROM board b
					ORDER BY ref DESC, re_step ASC)a)b
			WHERE b.rm>=#{startRow} AND b.rm<=#{endRow}
		]]>
	</select>


	<!-- 게시물 삽입 -->
	<insert id="save" parameterType="BoardDTO"> 
		INSERT INTO board(num, subject,
		reg_date, readcount, ref, re_step, re_level, content, ip, upload)
		VALUES(board_num_seq.nextval, #{subject}, sysdate, 0, <choose>
			<when test="ref==0"> board_num_seq.nextval, </when>
			<otherwise> #{ref}, </otherwise>
		</choose>
		#{re_step}, #{re_level}, #{content, jdbcType=VARCHAR}, #{ip}, #{upload,
		jdbcType=VARCHAR}) </insert>


